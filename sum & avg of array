import java.util.*;
public class Main{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int[] arr={4,5,6,7};
        float sum=0;
        for(int i=0;i<arr.length;i++) {
            sum = sum + arr[i];
        }
            System.out.println("the sum: " +sum);
        float avg=0;
        avg=sum/arr.length;
        System.out.println("The average: "+avg);
    }
}
